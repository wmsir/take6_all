.container {
  padding: 30rpx;
  background: linear-gradient(135deg, #1a2332 0%, #2d3748 50%, #1e2a3a 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

.form-group {
  background: linear-gradient(135deg, rgba(30, 41, 59, 0.95) 0%, rgba(51, 65, 85, 0.95) 100%);
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 217, 126, 0.15);
  backdrop-filter: blur(20rpx);
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #334155;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #fff;
}

.avatar-wrapper {
  margin: 0;
  padding: 0;
  background: none;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: relative;
  overflow: visible;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #334155;
}

.edit-icon {
  position: absolute;
  right: -6rpx;
  bottom: -6rpx;
  background: linear-gradient(135deg, #00d97e 0%, #00b368 100%);
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border: 2rpx solid #1e293b;
  box-shadow: 0 2rpx 8rpx rgba(0, 217, 126, 0.4);
}

.input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #fff;
  margin-left: 20rpx;
}

.form-item.readonly {
  opacity: 0.7;
}

.readonly-text {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #94a3b8;
  margin-left: 20rpx;
}

.save-btn {
  background: linear-gradient(135deg, #00d97e 0%, #00b368 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 50rpx;
  padding: 24rpx 0;
  width: 100%;
  box-shadow: 0 4rpx 16rpx rgba(0, 217, 126, 0.4);
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 217, 126, 0.3);
}

.save-btn[disabled] {
  opacity: 0.6;
  background-color: #059669;
}
