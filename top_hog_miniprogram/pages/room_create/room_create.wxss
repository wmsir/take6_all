.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a2332 0%, #2d3748 50%, #1e2a3a 100%);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.header {
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 600;
}

.form-card {
  background: linear-gradient(135deg, rgba(30, 41, 59, 0.95) 0%, rgba(51, 65, 85, 0.95) 100%);
  border-radius: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 217, 126, 0.15);
  backdrop-filter: blur(20rpx);
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #334155;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #e2e8f0;
}

.input {
  text-align: right;
  color: #ffffff;
  font-size: 30rpx;
  width: 300rpx;
}

.picker {
  font-size: 30rpx;
  color: #00d97e;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.arrow {
  color: #64748b;
  font-size: 32rpx;
}

.create-btn {
  background: linear-gradient(135deg, #00d97e 0%, #00b368 100%);
  color: #0f172a;
  font-weight: 600;
  border-radius: 50rpx;
  width: 100%;
  padding: 24rpx 0;
  font-size: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 217, 126, 0.4);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 217, 126, 0.3);
}

.create-btn[disabled] {
  background: #334155;
  color: #64748b;
}
