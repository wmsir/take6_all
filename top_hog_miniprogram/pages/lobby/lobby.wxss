/* 大厅页面样式 */
.container {
  min-height: 100vh;
  background: #0f172a;
  display: flex;
  flex-direction: column;
  padding-bottom: 40rpx;
}

/* 顶部导航 */
.header {
  padding: 40rpx 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  flex: 1;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.score-badge {
  text-align: right;
}

.score-label {
  font-size: 20rpx;
  color: #94a3b8;
  display: block;
}

.score-value {
  font-size: 32rpx;
  color: #fbbf24;
  font-weight: 600;
  display: block;
  line-height: 1;
  margin-top: 4rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #334155;
  border: 2rpx solid #1e293b;
}

/* Banner */
.banner {
  margin: 0 32rpx 32rpx;
  position: relative;
  height: 280rpx;
  border-radius: 32rpx;
  overflow: hidden;
  background: #1e293b;
}

.banner-img {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.9) 0%, rgba(15, 23, 42, 0.4) 100%);
}

.banner-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.banner-tag {
  font-size: 24rpx;
  color: #10b981;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.banner-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.banner-desc {
  font-size: 24rpx;
  color: #cbd5e1;
  opacity: 0.9;
}

.banner-features {
  display: flex;
  gap: 24rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.feature-icon {
  font-size: 24rpx;
}

/* 功能入口 */
.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.action-card {
  height: 220rpx;
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border: 2rpx solid transparent;
}

.action-card.create {
  background: linear-gradient(145deg, rgba(16, 185, 129, 0.15) 0%, rgba(16, 185, 129, 0.05) 100%);
  border-color: rgba(16, 185, 129, 0.3);
}

.action-card.join {
  background: linear-gradient(145deg, rgba(16, 185, 129, 0.12) 0%, rgba(16, 185, 129, 0.03) 100%);
  border-color: rgba(16, 185, 129, 0.25);
}

.action-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.action-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
}

.create-icon {
  background: #10b981;
  color: #0f172a;
}

.join-icon {
  background: #334155;
  color: #fbbf24;
  font-size: 32rpx;
}

.action-tag {
  font-size: 20rpx;
  color: #94a3b8;
  padding-top: 8rpx;
}

.create .action-tag {
  color: #10b981;
}

.join .action-tag {
  color: #fbbf24;
}

.action-title {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 20rpx;
  color: #94a3b8;
  line-height: 1.4;
  display: block;
}

/* 输入房间号 */
.join-input-card {
  margin: 0 32rpx 32rpx;
  background: #1e293b;
  border: 1rpx solid #334155;
  border-radius: 24rpx;
  padding: 24rpx;
}

.input-label {
  font-size: 24rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
  display: block;
}

.input-group {
  display: flex;
  gap: 16rpx;
  height: 80rpx;
}

.room-input {
  flex: 1;
  height: 100%;
  background: rgba(15, 23, 42, 0.5);
  border-radius: 16rpx;
  padding: 0 24rpx;
  color: #ffffff;
  font-size: 28rpx;
}

.join-btn {
  width: 140rpx;
  height: 100%;
  background: #10b981;
  border-radius: 16rpx;
  color: #0f172a;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
}

/* 房间列表 */
.room-list-section {
  margin: 0 32rpx;
  flex: 1;
  background: #1e293b;
  border-radius: 32rpx;
  padding: 24rpx;
  border: 1rpx solid #334155;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 600;
}

.refresh-btn {
  font-size: 24rpx;
  color: #94a3b8;
}

.room-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  /* 假设高度 */
  height: 400rpx;
}

.room-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #0f172a;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
}

.room-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.room-id {
  font-size: 28rpx;
  color: #10b981;
  font-weight: 700;
  background: rgba(16, 185, 129, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.room-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.room-name {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
}

.room-config {
  font-size: 22rpx;
  color: #64748b;
}

.room-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.room-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.status-text {
  font-size: 22rpx;
  font-weight: 500;
}

.status-text.playing {
  color: #10b981;
}

.status-text.waiting {
  color: #10b981;
}

.status-btn {
  height: 56rpx;
  padding: 0 24rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.status-btn {
  background: #334155;
  color: #e2e8f0;
}

.status-btn.active {
  background: #10b981;
  color: #0f172a;
}

.empty-state {
  text-align: center;
  padding: 40rpx 0;
}

.footer {
  margin-top: 32rpx;
  text-align: center;
  padding: 0 40rpx;
}

.tip-text {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.5;
}

.tip-link {
  color: #10b981;
  display: inline;
}
