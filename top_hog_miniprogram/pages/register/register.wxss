.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #1a2332 0%, #2d3748 50%, #1e2a3a 100%);
}

.header {
  margin: 60rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.form-container {
  width: 100%;
  padding: 40rpx;
  background: linear-gradient(135deg, rgba(30, 41, 59, 0.95) 0%, rgba(51, 65, 85, 0.95) 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 217, 126, 0.15);
  backdrop-filter: blur(20rpx);
}

.input-group {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #00d97e 0%, #00b368 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 217, 126, 0.4);
  transition: all 0.3s ease;
}

.register-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 217, 126, 0.3);
}

.back-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  color: #666;
  font-size: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
}

.tips {
  margin-top: 30rpx;
  padding: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
} 