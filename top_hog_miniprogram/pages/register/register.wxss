.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f4f4f4;
}

.header {
  margin: 60rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
}

.form-container {
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #3498db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
}

.back-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  color: #666;
  font-size: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
}

.tips {
  margin-top: 30rpx;
  padding: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
} 