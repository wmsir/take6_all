.container {
  padding: 30rpx;
  background-color: #0f172a;
  min-height: 100vh;
  box-sizing: border-box;
}

.form-group {
  background-color: #1e293b;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #334155;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #fff;
}

.avatar-wrapper {
  margin: 0;
  padding: 0;
  background: none;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: relative;
  overflow: visible;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #334155;
}

.edit-icon {
  position: absolute;
  right: -6rpx;
  bottom: -6rpx;
  background-color: #10b981;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border: 2rpx solid #1e293b;
}

.input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #fff;
  margin-left: 20rpx;
}

.form-item.readonly {
  opacity: 0.7;
}

.readonly-text {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #94a3b8;
  margin-left: 20rpx;
}

.save-btn {
  background-color: #10b981;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 50rpx;
  padding: 24rpx 0;
  width: 100%;
}

.save-btn:active {
  opacity: 0.9;
}

.save-btn[disabled] {
  opacity: 0.6;
  background-color: #059669;
}
