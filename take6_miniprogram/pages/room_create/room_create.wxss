.container {
  min-height: 100vh;
  background: #0f172a;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.header {
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 600;
}

.form-card {
  background: #1e293b;
  border-radius: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #334155;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #e2e8f0;
}

.input {
  text-align: right;
  color: #ffffff;
  font-size: 30rpx;
  width: 300rpx;
}

.picker {
  font-size: 30rpx;
  color: #10b981;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.arrow {
  color: #64748b;
  font-size: 32rpx;
}

.create-btn {
  background: #10b981;
  color: #0f172a;
  font-weight: 600;
  border-radius: 50rpx;
  width: 100%;
  padding: 24rpx 0;
  font-size: 32rpx;
}

.create-btn[disabled] {
  background: #334155;
  color: #64748b;
}
