{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "游戏配置Schema",
  "description": "定义游戏配置的标准格式",
  "type": "object",
  "required": ["gameTypeCode", "displayName", "minPlayers", "maxPlayers"],
  "properties": {
    "gameTypeCode": {
      "type": "string",
      "description": "游戏类型唯一标识符，必须与GameType枚举中的code一致",
      "pattern": "^[a-z_]+$",
      "examples": ["top_hog", "example_game"]
    },
    "displayName": {
      "type": "string",
      "description": "游戏的显示名称",
      "minLength": 1,
      "maxLength": 50,
      "examples": ["谁是猪头王", "示例游戏"]
    },
    "description": {
      "type": "string",
      "description": "游戏的简短描述",
      "maxLength": 500,
      "examples": ["经典牛头王游戏，避免收集牛头卡牌"]
    },
    "minPlayers": {
      "type": "integer",
      "description": "最小玩家数",
      "minimum": 1,
      "maximum": 100,
      "examples": [2]
    },
    "maxPlayers": {
      "type": "integer",
      "description": "最大玩家数",
      "minimum": 1,
      "maximum": 100,
      "examples": [10]
    },
    "enabled": {
      "type": "boolean",
      "description": "游戏是否启用",
      "default": true
    },
    "iconUrl": {
      "type": "string",
      "description": "游戏图标的URL路径",
      "format": "uri",
      "examples": ["/images/games/top_hog.png"]
    },
    "rulesDescription": {
      "type": "string",
      "description": "游戏规则的详细说明，支持换行",
      "examples": ["游戏目标：避免收集牛头卡牌\n规则1：...\n规则2：..."]
    },
    "displayOrder": {
      "type": "integer",
      "description": "在游戏列表中的显示顺序，数字越小越靠前",
      "minimum": 0,
      "default": 0,
      "examples": [1, 2, 3]
    },
    "gameSpecificConfig": {
      "type": "object",
      "description": "游戏特定的配置参数，根据不同游戏类型有不同的结构",
      "examples": [
        {
          "deckSize": 104,
          "handSize": 10,
          "rowCount": 4
        }
      ]
    }
  },
  "examples": [
    {
      "gameTypeCode": "top_hog",
      "displayName": "谁是猪头王",
      "description": "经典牛头王游戏，避免收集牛头卡牌",
      "minPlayers": 2,
      "maxPlayers": 10,
      "enabled": true,
      "iconUrl": "/images/games/top_hog.png",
      "displayOrder": 1,
      "rulesDescription": "游戏目标：避免收集牛头卡牌，拥有最少牛头数的玩家获胜。",
      "gameSpecificConfig": {
        "deckSize": 104,
        "handSize": 10,
        "rowCount": 4,
        "maxCardsPerRow": 5,
        "defaultMaxRounds": 3,
        "defaultTargetScore": 66,
        "playerChoiceTimeoutMs": 30000
      }
    }
  ]
}
